DATABASE_URL=postgresql://postgres:postgres@localhost:5435/ecommerce
PORT=3001
NTH_ORDER_DISCOUNT=3
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-change-this!!
LOG_LEVEL=info

# Rate Limiting Configuration
REDIS_URL=redis://localhost:6379
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_USER_MAX=120
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_CHECKOUT_MAX=5
RATE_LIMIT_ADMIN_MAX=10

# Adaptive Rate Limiting
ADAPTIVE_CPU_TARGET=0.7
ADAPTIVE_MEMORY_TARGET=0.8
ADAPTIVE_RESPONSE_TIME_TARGET=500
ADAPTIVE_ADJUSTMENT_INTERVAL=30000

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=300000

# Load Balancing
LOAD_BALANCER_STRATEGY=adaptive
HEALTH_CHECK_INTERVAL=30000

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200

# Trie Search
TRIE_MAX_SUGGESTIONS=10

# Search Cache
SEARCH_CACHE_TTL=300000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-ecommerce-images-bucket
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# Image Processing
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_FORMATS=image/jpeg,image/png,image/webp,image/avif
IMAGE_QUALITY_WEBP=85
IMAGE_QUALITY_JPEG=85
